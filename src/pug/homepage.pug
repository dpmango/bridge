---
title: Главная
bodyClass: homepage
---
extends shared/_layout
block content
  
  // HOME
  .home
    .home__slider
      .home__slidable(js-home-slider)
        .home__slide.hero
          .hero__background
            video(autoplay muted loop)
              source(src='/video/jim-beam.mp4' type="video/mp4")
            // fallback image  
            img(src="img/slide.png" srcset="img/slide@2x.png 2x")
          .hero__contents
            .hero__name JIM BEAM
            a(href="project.html").hero__title Сорваться на концерт &#10; THE CHEMICAL &#10; BROTHERS
            a(href="project.html").hero__more.link-border о проекте
      
        // slide
        .home__slide.hero
          .hero__background
            video(autoplay muted loop)
              source(src='/video/sevidov.mp4' type="video/mp4")
            img(src="img/slide.png" srcset="img/slide@2x.png 2x")
          .hero__contents
            .hero__name СЕВИОДОВ
            a(href="project.html").hero__title slide 2
            a(href="project.html").hero__more.link-border о проекте
        
        // slide
        .home__slide.hero
          .hero__background
            video(autoplay muted loop)
              source(src='/video/kolesnikov.mp4' type="video/mp4")
            // fallback image  
            img(src="img/slide.png" srcset="img/slide@2x.png 2x")
          .hero__contents
            .hero__name КОЛЕСНИКОВ
            a(href="project.html").hero__title slide 3
            a(href="project.html").hero__more.link-border о проекте
      
