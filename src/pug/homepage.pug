      .home__slidable(js-home-slider)
        .home__slide.slide-home
          .slide-home__background
            video(autoplay muted loop)
              source(src='/video/jim-beam.mp4' type="video/mp4")
            // fallback image  
            img(src="img/slide.png" srcset="img/slide@2x.png 2x")
          .slide-home__contents
            .slide-home__name JIM BEAM
            .slide-home__title Сорваться на концерт <br/> THE CHEMICAL <br/> BROTHERS
            a(href="#").slide-home__more о проекте
      
        // slide
